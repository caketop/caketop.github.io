---
import chocolateCake from "~/assets/american-heritage-chocolate-5K5Nc3AGF1w-unsplash.jpg";
import { getPicture } from "@astrojs/image";

const hero = await getPicture({
  src: chocolateCake,
  widths: [450, 800, 1200],
  formats: ["webp", "avif", "jpeg"],
});
const sizes = "100vw";
---

<picture>
  {hero.sources.map((attrs) => <source {...attrs} {sizes} />)}
  <img
    class="object-cover w-full h-full"
    {...hero.image}
    alt="Frosting a cake"
  />
</picture>
