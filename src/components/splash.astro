---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
---

<section class="relative h-full bg-black">
  <div id="splash-bg-fallback" class="absolute inset-0 opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center">
    <h2 class="flex flex-col gap-2 sm:gap-4 sm:self-auto">
      <Icon name="logomark" class="h-24 text-white md:h-32" />
      <div
        class="font-extrabold p-5 tracking-tighter text-center text-8xl gradient-text"
      >
        <slot />
      </div>
    </h2>
  </div>
</section>

