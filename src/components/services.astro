---
import ContentSection from "~/components/content-section.astro";
import { Icon } from "astro-icon";

const services = [
  {
    title: "Your Choice Of Hardware",
    description:
      "Choose one of our supported development boards, or have us build an OS for the platform of your choice.",
    icon: "mdi:hammer",
  },
  {
    title: "Virtual Machines & Appliances",
    description:
      "Build virtual appliances and deploy them to your own infrastructure or any of the major cloud providers.",
    icon: "mdi:ghost",
  },
  {
    title: "Security Updates Included",
    description:
      "Stop worrying about updating the operating system on your devices and appliances; we'll take care of it, automatically.",
    icon: "mdi:lock-check",
  },
  {
    title: "Containers",
    description:
      "Package your apps in containers and run them at the edge. Deploy your existing containers or let us build them for you.",
    icon: "mdi:package-variant",
  },
  {
    title: "Delta Updates",
    description:
      "Stop wasting time and bandwidth and download only what has changed since the previous version. Rollback to previous versions without doubling your storage requirements.",
    icon: "mdi:feather",
  },
  {
    title: "No Cloud? No Problem!",
    description:
      "Deploy our cloud on your infrastructure or connect to your existing services. Don't need cloud connectivity? That's fine too!",
    icon: "mdi:cloud-question",
  },
];
---

<ContentSection title="Services" id="services">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset">
          <div class="w-16 h-16 p-3 border-2 border-current rounded-full">
            <Icon name={icon} />
          </div>
          <p class="text-xl font-extrabold text-center">{title}</p>
          <p class="text-sm text-center text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
