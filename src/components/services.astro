---
import ContentSection from "~/components/content-section.astro";
import { Icon } from "astro-icon";

const services = [
  {
    title: "Embedded & IoT Firmware",
    description:
      "Let us build an OS for the platform of your choice. We have expertise with Yocto, Debian, and OpenWRT.",
    icon: "mdi:hammer",
  },
  {
    title: "Virtual Machines & Appliances",
    description:
      "We can build virtual appliances for your application, and automate deploying them to your own infrastructure or any of the major cloud providers.",
    icon: "mdi:ghost",
  },
  {
    title: "Container Images",
    description:
      "Have us package your apps in containers and run them in the cloud or at the edge, with Docker, Podman, or Kubernetes.",
    icon: "mdi:package-variant",
  },
  {
    title: "Security Updates",
    description:
      "Stop worrying about updating the operating system on your devices and appliances; have us build an automatic update system for you.",
    icon: "mdi:lock-check",
  },
  {
    title: "Delta Updates",
    description:
      "Our updater downloads only what has changed since the previous version. Enable rolling back to previous versions without doubling your storage requirements.",
    icon: "mdi:shimmer",
  },
  {
    title: "No Cloud? No Problem!",
    description:
      "Deploy our Wireguard-based cloud connectivity solution on your infrastructure or connect to your existing services. Don't need cloud connectivity? That's fine too!",
    icon: "mdi:cloud-question",
  },
];
---

<ContentSection title="Services" id="services">
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      services.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset">
          <div class="w-16 h-16 p-3 border-2 border-current rounded-full">
            <Icon name={icon} />
          </div>
          <p class="text-xl font-extrabold text-center">{title}</p>
          <p class="text-sm text-center text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
