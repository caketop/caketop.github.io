---
import ContentSection from "~/components/content-section.astro";
---


<ContentSection title="Contact Us" id="contact">
  <Fragment slot="lead">
    <span class="text-primary">Get in touch</span>
    and let us know what we can
    <span class="text-primary">build for you</span>.
  </Fragment>
  <form action="https://submit-form.com/ZnF1nOju" data-botpoison-public-key="pk_14b6d75d-379c-42e7-9c35-731a053fcb79">
    <div class="grid grid-cols-5 gap-4">
      <div class="text-right">
        <label for="name">Name</label>
      </div>
      <div class="col-span-4">
        <input type="text" id="name" name="name" placeholder="Name" required=""
        />
      </div>
      <div class="text-right">
        <label for="email">Email</label>
      </div>
      <div class="col-span-4">
        <input
          type="email"
          id="email"
          name="email"
          placeholder="Email"
          required
        />
      </div>
      <div class="text-right">
        <label for="message">Message</label>
      </div>
      <div class="col-span-4">
        <textarea id="message" name="message" placeholder="Message" required=""
        ></textarea>
      </div>
      <div class="text-right col-span-5">
        <button type="submit">Send</button>
      </div>
    </div>
  </form>
</ContentSection>
